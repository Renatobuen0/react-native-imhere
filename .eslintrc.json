{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:prettier/recommended",
        "plugin:react/recommended",
        "xo",
        "xo-react",
        "prettier"
    ],
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off"
    }
}